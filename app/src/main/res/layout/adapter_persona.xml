<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_height="40dp" android:layout_width="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:gravity="center"
    >


    <ImageView
        android:layout_width="40dp"
        android:layout_height="wrap_content"
        android:id="@+id/imagenPersonaACargo"

        />


    <TextView
        android:layout_width="140dp"
        android:layout_height="wrap_content"
        android:text="NOMBRE PERSONA"
        android:id="@+id/tvNombrePersona"
        android:textSize="18dp"

        />
    <Button
        android:layout_width="160dp"
        android:layout_height="wrap_content"
        android:text="Ver ubicacion"
        android:id="@+id/verUbicacion"

        />



</LinearLayout>